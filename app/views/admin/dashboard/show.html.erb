<!-- app/views/admin/dashboard/show.html.erb -->

<h1 class="mt-4 mb-3">Admin Dashboard</h1>

<div class="row">
  <div class="col-md-6">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Total Products</h5>
        <p class="card-text fs-4">
          <%= link_to @product_count, admin_products_path, class: "text-decoration-none text-dark" %>
        </p>
      </div>
    </div>
  </div>
  <div class="col-md-6">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title">Total Categories</h5>
        <p class="card-text fs-4">
          <%= link_to @category_count, class: "text-decoration-none text-dark" %>
        </p>
      </div>
    </div>
  </div>
</div>
